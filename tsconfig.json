{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "scripts/**/*.ts"],
  "ts-node": {
    "compilerOptions": {
      "skipLibCheck": true,
      "target": "ES6",
      "module": "CommonJS"
    }
  }
}
